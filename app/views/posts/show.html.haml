%p#notice= notice

.row.post_full
  .span10
    #post-title
      = @post.title
    .post-subtitle By: Michelle Rittner | Posted on #{ @post.published_at.strftime("%A, %B %d, %Y") }
    .keywords-posttitle
      %span#keywords-italic 
        Keywords:
      = @post.tags.join(", ")
      / Istanbul, Turkey, Cats
    .indent
      %p
        = @post.content

      = link_to 'Edit', edit_post_path(@post)
      \|
      = link_to 'Back', posts_path
